python -m uvicorn main:app --reload --port 8000
 
from fastapi import FastAPI, HTTPException
import json
from pathlib import Path
 
# Create FastAPI app
app = FastAPI(title="Service Orders API")
 
# Path to JSON "database"
SERVICE_ORDERS_FILE = Path("services_orders.json")
 
# Function to load service orders
def load_service_orders():
    with open(SERVICE_ORDERS_FILE) as f:
        return json.load(f)
 
@app.get("/")
def root():
    return {"message": "Welcome to the Group C API!"}
 
 
# ---- ENDPOINT 1: List all service orders ----
@app.get("/service-orders")
def list_service_orders():
    return load_service_orders()
 
# ---- ENDPOINT 2: Get a specific service order by ID ----
@app.get("/service-orders/{order_id}")
def get_service_order(order_id: int):
    orders = load_service_orders()
    for order in orders:
        if order["id"] == order_id:
            return order
    raise HTTPException(status_code=404, detail="Service order not found")
 
 
 
 
